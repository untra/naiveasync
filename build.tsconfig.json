{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "react",
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "allowJs": true,
    "noEmit": false
  },
  "include": [
    "src/naiveasync/**/*"
  ],
  "exclude": [
    "**/*.js.*"
  ],
  "compileOnSave": true
}
